{
    "name": "electron-fluent-ui",
    "description": "Quickstart repository for electron applications using Fluent UI",
    "version": "1.1.0",
    "license": "MIT",
    "author": {
        "email": "oliver.schwendener@hotmail.com",
        "name": "Oliver Schwendener",
        "url": "https://github.com/oliverschwendener"
    },
    "main": "packages/main/dist/index.cjs",
    "scripts": {
        "build:main": "cd ./packages/main && vite build",
        "build:preload": "cd ./packages/preload && vite build",
        "build:renderer": "cd ./packages/renderer && vite build",
        "build": "npm run build:main && npm run build:preload && npm run build:renderer",
        "lint": "eslint . --ext js,ts,tsx",
        "start": "esno scripts/watch.ts",
        "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
        "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
        "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
        "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
        "package": "cross-env MODE=production npm run build && electron-builder build --config electron-builder.config.js"
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@types/react-router-dom": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "@vitejs/plugin-react": "^3.0.1",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^6.0.0",
        "electron": "^22.0.3",
        "electron-builder": "^23.6.0",
        "eslint": "^8.32.0",
        "esno": "^0.16.3",
        "prettier": "^2.8.3",
        "typescript": "^4.9.4",
        "vite": "^4.0.4"
    },
    "dependencies": {
        "@fluentui/react-components": "^9.11.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.7.0"
    }
}
