{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules"]
}
